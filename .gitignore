# ======================================
# WordPress + Flatsome .gitignore
# ======================================

# --- WordPress core ---
wp-admin/
wp-includes/

# --- Config ---
wp-config.php

# --- Uploads & media ---
wp-content/uploads/

wflogs/

# --- Plugins ---
# Ignore toàn bộ plugin tải từ repo/market, trừ khi bạn code custom
wp-content/plugins/*
!wp-content/plugins/my-custom-plugin/

# --- Themes ---
# Ignore tất cả theme trừ Flatsome (nếu đang tùy biến)
wp-content/themes/*
wp-content/themes/flatsome/
!wp-content/themes/flatsome-child/
!wp-content/themes/index.php

# --- Cache & backup ---
wp-content/cache/
wp-content/backups/
wp-content/ai1wm-backups/
wp-content/languages/
wp-content/debug.log
wp-content/advanced-cache.php
*.log
*.sql

# --- Composer / Node ---
node_modules/
vendor/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# --- IDE / OS ---
.DS_Store
Thumbs.db
.idea/
.vscode/
*.swp
*.swo
*.swn

# --- Env ---
.env
.env.*
